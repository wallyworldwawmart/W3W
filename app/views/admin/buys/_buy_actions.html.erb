<% can_edit_buy = can?(:edit, buy) %>
<%=
  link_to(t(:edit),
    edit_admin_contact_buy_path(@contact, buy),
    :class => "action edit"
  ) if can_edit_buy
%> <%=
  link_to(
      t("Критерии", :scope => [:admin, :buys]) +
      " (#{buy.search_criterias.size.to_s})",
    admin_contact_buy_search_criterias_path(@contact, buy),
    :class =>"action search_criteria"
  ) if can_edit_buy
%>

<%=
  link_to t(:show),
    admin_contact_buy_path(:contact_id => buy.contact_id, :id => buy.id.to_param),
    {
    :class => "action show",
    :id => "#{buy.id}_show"
  } if can? :show, buy
%>

<%#
  link_to(t(:delete),
    admin_contact_buy_path(
      :contact_id => contact.id,
      :id => buy
    ),
    :confirm => t("Изтриване?", :scope => [:admin, :buys]),
    :method => :delete,
    :class => "action delete"
  ) if can?(:edit, buy)
%>

<%=
  link_to(
      t("Съвпадащи оферти", :scope => [:admin, :buys]),
    buy_search_result_admin_contact_buy_path(
      :contact_id => @contact.id, :id => buy
    ),
    :class =>"action search"
  ) if can_edit_buy
%>