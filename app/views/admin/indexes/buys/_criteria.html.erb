<fieldset class="search_criteria">
  <legend><%= f.object.new_record? ? "Нов критерий" : "Критерий" %></legend>

  <div id="dialog_<%= f.object_id.abs %>" title="<%= t("Изтриване", :scope => [:admin, :buys])  %>" style="display: none">
    <p>
      <span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 30px 0;"></span>
      <%= t("Изтриване", :scope => [:admin, :buys])  %> <br />
      <%= t("Are you sure?") %>
    </p>
  </div>

  <ul class="item_preview" >
    <li>
      <%= remove_link(f) %>

      <% if has_expanded_preview  %>
        <%= link_to image_tag("edit.png", :class => "icon"), "#", :id => "#{f.object_id.abs}", :class => "toggle_item_form" %>
        <!-- Put the preview fields here -->

      <% else %>
        <%= t("Изтриване", :scope => [:partials, :search_criterias]) %>
      <% end %>
    </li>
  </ul>


  <ul class="item_form" <%= f.object.new_record? ? "" : 'style="display:none"' %> >
    <%= f.input :property_type,
      :as => :radio,
      :collection =>  $cache['PropertyType'],
      :input_html => {
      :class => "property_type_radio"

    }
  %>
  </ul>

  <div id="property_type_keywords">

  </div>

</fieldset>