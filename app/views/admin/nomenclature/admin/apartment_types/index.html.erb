<% render :partial => '/admin/navigations/items' %>
<% title t('.title') %>

<table>
  <tr>
    <th><%= ApartmentType.model_name.human(:name => "name")%> </th>
    <th><%= t("status", :scope => [:admin, :apartment_types])%> </th>
  </tr>
  <% for apartment_type in @apartment_types %>
    <tr>
      <td><%= link_to image_tag("edit.png", :class => :icon) + h(apartment_type.name), edit_admin_apartment_type_path(apartment_type) %></td>
      <td><%= apartment_type.active == true ? t("active", :scope => [:admin, :apartment_types]) : t("unactive", :scope => [:admin, :apartment_types]) %></td>
      <td><%= link_to t("Delete", :scope =>[:admin, :dashboard]), [:admin, apartment_type], :confirm => t('Are you sure?'), :method => :delete, :class => "action delete" %></td>
    </tr>
  <% end %>
</table>
<br />
<p>
  <%= link_to t(".add"), new_admin_apartment_type_path,
          :class => "action new" %>
  
</p>
