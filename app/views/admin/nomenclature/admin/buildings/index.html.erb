<% render :partial => '/admin/navigations/items' %>
<% title "Buildings" %>

<table>
  <tr>
    <th>Building Type</th>
    <th>Property Type</th>
    <th>Area</th>
  </tr>
  <% for building in @buildings %>
    <tr>
      <td><%=h building.building_type_id %></td>
      <td><%=h building.property_type_id %></td>
      <td><%=h building.area %></td>
      <td width="31"><%= link_to t("Show",:scope => [:admin]), [:admin, building] %></td>
      <td width="21"><%= link_to image_tag("edit.png", :class => :icon) + "Edit", edit_admin_building_path(building) %></td>
      <td width="37"><%= link_to t("Delete", :scope =>[:admin, :dashboard]), [:admin, building], :confirm => t('Are you sure?'), :method => :delete, :class => "action delete" %></td>
    </tr>
  <% end %>
</table>
<br />
<p><%= link_to "Add Building", new_admin_building_path,
          :class => "action new" %>
  
</p>
