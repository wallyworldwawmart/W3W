<% render :partial => '/admin/navigations/items' %>
<% title t('.title') %>

<table>
  <tr>
    <th><%= ConstructionType.model_name.human(:name => "name")%> </th>
    <th><%= t("status", :scope => [:admin, :construction_types])%> </th>
  </tr>
  <% for construction_type in @construction_types %>
    <tr>
      <td><%= link_to image_tag("edit.png", :class => :icon) + h(construction_type.name), edit_admin_construction_type_path(construction_type) %></td>
      <td><%= construction_type.active == true ? t("active", :scope => [:admin, :construction_types]) : t("unactive", :scope => [:admin, :construction_types]) %></td>
      <td><%= link_to t("Delete", :scope =>[:admin, :dashboard]), [:admin, construction_type], :confirm => t('Are you sure?'), :method => :delete, :class => "action delete" %></td>
    </tr>
  <% end %>
</table>
<br />
<p>
  <%= link_to t(".add"), new_admin_construction_type_path,
          :class => "action new" %>
  
</p>
