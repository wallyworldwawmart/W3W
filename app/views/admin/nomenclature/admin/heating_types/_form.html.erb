<%= semantic_form_for [:admin, @heating_type]  do |f| %>
  <%= f.error_messages %>

  <%= f.inputs do %>
    <%= f.input :locale, :value => I18n.locale, :as => :hidden %>
    <%= f.input :active, :as => :boolean %>
    <%= f.input :name %>
  <% end %>

  <p>
    <%= f.submit t(:create) %> |
    <%= link_to t("index", :scope => [:admin, :heating_types, :form]), admin_heating_types_path %>
  </p>  
<% end %>

