<% render :partial => '/admin/navigations/items' %>
<% title t('.title') %>

<table>
  <tr>
    <th><%= HeatingType.model_name.human(:name => "name")%> </th>
    <th><%= t("status", :scope => [:admin, :heating_types])%> </th>
  </tr>
  <% for heating_type in @heating_types %>
    <tr>
      <td><%= link_to image_tag("edit.png", :class => :icon) + h(heating_type.name), edit_admin_heating_type_path(heating_type) %></td>
      <td><%= heating_type.active == true ? t("active", :scope => [:admin, :heating_types]) : t("unactive", :scope => [:admin, :heating_types]) %></td>
      <td><%= link_to t("Delete", :scope =>[:admin, :dashboard]), [:admin, heating_type], :confirm => t('Are you sure?'), :method => :delete, :class => "action delete" %></td>
    </tr>
  <% end %>
</table>
<br />
<p>
  <%= link_to t(".add"), new_admin_heating_type_path,
          :class => "action new" %>
  
</p>
