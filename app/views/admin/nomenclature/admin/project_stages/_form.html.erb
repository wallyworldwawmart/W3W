<%= semantic_form_for [:admin, @project_stage]  do |f| %>
  <%= f.error_messages %>

  <%= f.inputs do %>
    <%= f.input :locale, :value => I18n.locale, :as => :hidden %>
    <%= f.input :active, :as => :boolean %>
    <%= f.input :name %>
  <% end %>

  <p>
    <%= f.submit t(:create) %> |
    <%= link_to t("index", :scope => [:admin, :project_stages, :form]), admin_project_stages_path %>
  </p>

<% end %>
