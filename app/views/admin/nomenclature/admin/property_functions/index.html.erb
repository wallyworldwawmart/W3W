<% render :partial => '/admin/navigations/items' %>
<% title t('.title') %>

<table>
  <tr>
    <th><%= PropertyFunction.model_name.human(:name => "name")%> </th>
    <th><%= t("status", :scope => [:admin, :property_functions])%> </th>
  </tr>
  <% for property_function in @property_functions %>
    <tr>
      <td><%= link_to image_tag("edit.png", :class => :icon) + h(property_function.name), edit_admin_property_function_path(property_function) %></td>
      <td><%= property_function.active == true ? t("active", :scope => [:admin, :property_functions]) : t("unactive", :scope => [:admin, :property_functions]) %></td>
      <td><%= link_to t("Delete", :scope =>[:admin, :dashboard]), [:admin, property_function], :confirm => t('Are you sure?'), :method => :delete, :class => "action delete" %></td>
    </tr>
  <% end %>
</table>
<br />
<p>
  <%= link_to t(".add"), new_admin_property_function_path,
          :class => "action new" %>
  
</p>
