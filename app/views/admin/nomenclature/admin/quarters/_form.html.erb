<h2>
  <%= [[District.model_name.human(:name => "name"), @city.municipality.district.name].join(' : '),
       [Municipality.model_name.human(:name => "name"),@city.municipality.name].join(' : '),
       @city.name_with_type
      ].join(' -> ')
  %>
</h2>

<%= semantic_form_for [:admin,@city, @quarter] do |f| %>
  <%= f.error_messages %>

  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :city_id, :value => params[:city_id], :as => :hidden %>
    <%= f.input :locale, :value => I18n.locale, :as => :hidden %>
  <% end %>

  <p>
    <%= f.submit t(:create) %> |
    <%= link_to t('index', :scope => [:admin, :quarters, :form]), admin_city_quarters_path %>
  </p>

<% end %>
