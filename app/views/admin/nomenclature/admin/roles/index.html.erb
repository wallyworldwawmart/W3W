<% render :partial => '/admin/navigations/items' %>
<% title "Roles" %>

<table>
  <tr>
    <th><%= t("Name", :scope => [:admin]) %></th>
  </tr>
  <% for role in @roles %>
    <tr>
      <td><%=link_to image_tag("edit.png", :class => :icon) + h(role.name), edit_admin_role_path(role) %></td>
      <td width="31"><%= link_to t("Show",:scope => [:admin]), [:admin, role] %></td>
      <td width="37"><%= link_to t("Delete", :scope =>[:admin, :dashboard]), [:admin, role], :confirm => t('Are you sure?'), :method => :delete, :class => "action delete" %></td>
    </tr>
  <% end %>
</table>
<br />
<p><%= link_to t("Add Role", :scope => [:admin]), new_admin_role_path,
          :class => "action new" %>
  
</p>
