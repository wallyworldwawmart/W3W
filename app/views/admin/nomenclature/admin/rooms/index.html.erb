<% render :partial => '/admin/navigations/items' %>
<% title "Rooms" %>

<table>
  <tr>
    <th>Room Type</th>
    <th>Area</th>
  </tr>
  <% for room in @rooms %>
    <tr>
      <td><%= link_to image_tag("edit.png", :class => :icon) + h(room.name), edit_admin_room_path(room) %></td>
      <td><%=h room.room_type_id %></td>
      <td><%=h room.area %></td>
      <td width="31"><%= link_to t("Show",:scope => [:admin]), [:admin, room] %></td>
      <td width="37"><%= link_to t("Delete", :scope =>[:admin, :dashboard]), [:admin, room], :confirm => t('Are you sure?'), :method => :delete, :class => "action delete" %></td>
    </tr>
  <% end %>
</table>
<br />
<p><%= link_to "Add Room", new_admin_room_path,
          :class => "action new" %>
  
</p>
