<% render :partial => '/admin/navigations/items' %>
<% title "Sources" %>

<table>
  <tr>
    <th><%= t("Name", :scope => [:admin]) %></th>
  </tr>
  <% for source in @sources %>
    <tr>
      <td><%= link_to image_tag("edit.png", :class => :icon) + h(source.name), edit_admin_source_path(source) %></td>
      <td width="37"><%= link_to t("Delete", :scope =>[:admin, :dashboard]), [:admin, source], 
  :confirm => t('Are you sure?'), :method => :delete, :class =>"action delete" %></td>
    </tr>
  <% end %>
</table>
<br />
<p><%= link_to t("Add Source", :scope => [:admin]), new_admin_source_path,
          :class => "action new" %>
  
</p>
