<%= semantic_form_for [:admin, @sphere]  do |f| %>
  <%= f.error_messages %>

  <%= f.inputs do %>
    <%= f.input :locale, :value => I18n.locale, :as => :hidden %>
    <%= f.inputs :active, :name %>    
  <% end %>

  <p>
    <%= f.submit t(:create) %> |
    <%= link_to t(".index"), admin_spheres_path %>
  </p>

<% end %>
