<%= semantic_form_for [:admin, @validation_type]  do |f| %>
  <%= f.error_messages %>

  <%= f.inputs do %>
    <%= f.input :active, :as => :boolean %>
    <%= f.input :name %>
  <% end %>

  <p>
    <%= f.submit t(:create) %> |
    <%= link_to t("index", :scope => [:admin, :validation_types, :form]), admin_validation_types_path %>
  </p>

<% end %>
