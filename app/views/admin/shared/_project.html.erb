<div id="<%= dom_id(project)%>" class="ui-widget ui-widget-content ui-corner-all offer_content" style="background-image: url(/images/offer_background.gif);">
  <div class="picture">
    <%=
    image = !project.pictures.blank? ? project.pictures.first.url(:thumb): "/images/photo_project_missing.png"
    link_to(image_tag(image), edit_admin_contact_project_path(
        :contact_id => project.contact.id, :id => project)
    )%>
  </div>
  <div class="info">
    <%= render :partial => "/admin/shared/project_details", :locals => {:project => project} %>
    <div class="clear"></div>
    <hr />

    <div class="offer_actions">
      <% if defined? contact %>
        <%= render :partial => actions, :locals => {:project => project, :contact => contact} %>
      <% else %>
        <%= render :partial => actions, :locals => {:project => project} %>
      <% end %>
    </div>
  </div>

</div>