<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>

    <%=
    stylesheet_link_tag 'admin',
      'calendar',
      'themes/redmond/ui.all.css',
      'themes/redmond/formtastic.css',
      'picbox/picbox.css',
      'fg.menu.css',
      :cache => "cached_css"
  %>

    <%=
    javascript_include_tag :defaults,
      "ui/jquery-ui",
      "ui/ui.core",
      "ui/ui.tabs",
      "ui/ui.draggable",
      "ui/ui.resizable",
      "ui/ui.dialog",
      'calendar',
      'nested_attributes',
      "picbox/js/picbox.js",
      "jquery.dump",
      'fg.menu.js',
      :cache => "cached_javascript"
  %>

      <%= yield(:head) %>

  </head>
  <body>
    <div id="container">
      <%- if show_title? -%>
        <h2 class="ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all"><%=h yield(:title) %></h2>
      <%- end -%>
      <%= yield %>
    </div>
  </body>
</html>
