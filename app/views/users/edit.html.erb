<% title  t(:".edit_my_account") %>

<%= form_for @user, :url => account_path, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit t(:".update") %>
<% end %>

